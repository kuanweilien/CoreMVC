@{
}
@model CoreMVC.Areas.Identity.Models.RegisterModel;


<div class="container">
    <div class="row">
        <div class="col col-md-2 col-lg-2 col-xl-2"></div>
        <div class="col-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">
            <h1>Register</h1>
            <form method="post" asp-action="Register">
                <div class="form-group">
                    <label asp-for="Email">Email Address</label>
                    <input asp-for="Email"  class="form-control"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group p-1">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password"  class="form-control"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group p-1">
                    <label asp-for="ConfirmPasswrod">ConfirmPasswrod</label>
                    <input asp-for="ConfirmPasswrod"  class="form-control"/>
                    <span asp-validation-for="ConfirmPasswrod" class="text-danger"></span>
                </div>
                <div class="p-1">
                    <button type="submit" class="btn btn-primary" >Submit</button>
                </div>
                <div class="p-1">
                    <div class="text-danger">@ViewData["message"]</div>
                </div>
            </form>
        </div>
        <div class="col-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">
            <div class="p-5">
                <form method="post" asp-action="GoogleRegister">
                    <button type="submit" class="btn btn-primary">Register with Google </button>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
