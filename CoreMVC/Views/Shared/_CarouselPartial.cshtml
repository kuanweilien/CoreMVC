    Add Propertity in to Model : public IEnumerable<CarouselModel> CarouselModels { get; set; }
*@

<div class="container">
    <div class="col-2"></div>
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
        <div class="carousel-indicators">
            @for(int i = 0;i<Model.CarouselModels.Count;i++)
            {
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" aria-label="Slide @(i+1)"
                           @(i==0  ? "aria-current=true class=active" :"" )  
                >
                </button>
            }
        </div>
        <div class="carousel-inner">
            @for(int i=0;i<Model.CarouselModels.Count;i++)
            {
                <div class="carousel-item @(i == 0 ? "active":"")">
                    <img src="@(Model.CarouselModels[i].PhotoPath)" class="d-block w-100" alt="@i">
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
        </div>
    <div class="col-2"></div>
</div>