@model CoreMVC.Models.User.UserModel

@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="col-4">
        <form asp-action="Login">
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="E-mail"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <label class="text-danger" >@ViewData["LoginResult"]</label>

            <input id="submit" type="submit" value="Login" class="btn btn-primary"/>

            
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}